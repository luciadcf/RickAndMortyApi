<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EditableTextView">
        <attr name="input_header" format="string" />
        <attr name="input_hint" format="string" />
        <attr name="input_hint_color" format="reference" />
        <attr name="input_type" format="enum">
            <enum name="none" value="-1" />
            <enum name="text" value="0" />
            <enum name="password" value="1" />
            <enum name="email" value="2" />
            <enum name="phone" value="3" />
            <enum name="multi_line" value="4" />
            <enum name="number" value="5" />
        </attr>
        <attr name="input_ime" format="enum">
            <enum name="next" value="0" />
            <enum name="done" value="1" />
        </attr>
        <attr name="input_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LoadingButtonView">

        <attr name="btn_text" format="string" />
        <attr name="btn_text_color" format="color" />
        <attr name="btn_background_color" format="color" />
        <attr name="btn_background_drawable" format="reference" />
        <attr name="btn_text_style" format="reference" />
        <attr name="btn_has_radius" format="boolean" />

    </declare-styleable>

</resources>